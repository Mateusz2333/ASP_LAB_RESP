@{
}
@model PagingList<Book>
<h1>Lista książek</h1>
<a class="btn btn-primary" asp-controller="Book" asp-action="Create">Dodaj książkę</a>
<a class="btn btn-primary" asp-controller="Book" asp-action="CreateApi">Dodaj książkę z Api</a>
<table class="table">
    <thead></thead>
    <tr>
        <th>
            @Html.DisplayNameFor(i => i.Data.GetEnumerator().Current.Title)
        </th>
        <th>
            @Html.DisplayNameFor(i => i.Data.GetEnumerator().Current.Author)
        </th>
        <th>
            Opcje
        </th>
    </tr>
    <tbody>
        @foreach(var item in @Model.Data)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Author
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-controller="Book" asp-action="Update" asp-route-id="@item.Id">Edycja</a>
                    <a class="btn btn-outline-info" asp-controller="Book" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a class="btn btn-outline-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
                <td>

                </td>
            </tr>
        }
    </tbody>
</table>
<nav aria-label="Books page navigation">
    <ul class="pagination">
        @if (Model.IsPrevious)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Book"
                   asp-action="Index"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-size="@Model.Size">
                    Poprzednia
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Poprzednia</a>
            </li>
        }
        <li class="page-item disabled">
            <a class="page-link">@Model.Page</a>
        </li>
        @if (Model.IsNext)
        {
            <li class="page-item">
                <a class="page-link"
                   asp-controller="Book"
                   asp-action="Index"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-size="@Model.Size">
                    Następna
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link">Następna</a>
            </li>
        }
    </ul>
</nav>